{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "declaration": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "lib": ["es2017", "dom"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["**/*.ts", "**/*.tsx"]
  }